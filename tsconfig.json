{
  "compilerOptions": {
    "declaration": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "./lib"
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "integration-test/**/*"
  ]
}
